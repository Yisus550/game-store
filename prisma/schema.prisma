generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  email         String    @unique
  passwordHash  String?   // Nullable if using OAuth (Google/GitHub)
  image         String?
  role          Role      @default(CUSTOMER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  orders        Order[]
  reviews       Review[]
  wishlist      Game[]    @relation("UserWishlist") // Implicit Many-to-Many
}

enum Role {
  CUSTOMER
  ADMIN
}

model Game {
  id            Int       @id @default(autoincrement())
  title         String
  slug          String    @unique
  description   String    @db.Text
  price         Decimal   @db.Decimal(10, 2)
  coverImage    String?
  releaseDate   DateTime
  isFeatured    Boolean   @default(false)

  platforms     Platform[]
  genres        Genre[]
  keys          GameKey[]
  reviews       Review[]
  orderItems    OrderItem[]
  favoritedBy   User[]     @relation("UserWishlist")

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Platform {
  id      Int    @id @default(autoincrement())
  name    String @unique
  slug    String @unique
  games   Game[]
}

model Genre {
  id      Int    @id @default(autoincrement())
  name    String @unique
  slug    String @unique
  games   Game[]
}

model GameKey {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  isUsed    Boolean  @default(false)

  gameId    Int
  game      Game     @relation(fields: [gameId], references: [id])

  orderId   Int?
  order     Order?   @relation(fields: [orderId], references: [id])
}

model Order {
  id          Int         @id @default(autoincrement())
  total       Decimal     @db.Decimal(10, 2)
  status      OrderStatus @default(PENDING)
  createdAt   DateTime    @default(now())

  userId      Int
  user        User        @relation(fields: [userId], references: [id])

  items       OrderItem[]
  keys        GameKey[]
}

enum OrderStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  quantity  Int
  price     Decimal @db.Decimal(10, 2)

  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])

  gameId    Int
  game      Game    @relation(fields: [gameId], references: [id])
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int      @default(5) // 1-5 scale
  comment   String?  @db.Text
  createdAt DateTime @default(now())

  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  gameId    Int
  game      Game     @relation(fields: [gameId], references: [id])

  @@unique([userId, gameId]) // User can only review a game once
}
